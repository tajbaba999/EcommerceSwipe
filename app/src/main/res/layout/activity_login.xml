<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignupActivity"
    android:background="@color/light_blue"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/imagetop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/image_top" />

    <TextView
        android:id="@+id/txviewheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:text="Sign in" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="32dp"
            android:paddingTop="10dp"
            android:text="Email"
            android:textColor="@color/darkgrey"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/input_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_field"
                app:boxBackgroundMode="none"
                android:paddingBottom="0dp"
                app:placeholderText="user@example.com"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/texfiledemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:paddingTop="-40dp"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:baselineAligned="false"
            android:paddingLeft="32dp"
            android:paddingTop="10dp"
            android:text="@string/password_head_2"
            android:textColor="@color/darkgrey"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/password_input_field"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/input_field">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_field"
                app:boxBackgroundMode="none"
                android:paddingBottom="0dp"
                app:passwordToggleEnabled="true"
                app:placeholderText="must be 8 charcters"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/texfiledpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:paddingTop="-40dp"

                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_compat_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"

                android:layout_marginTop="40dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/button_prim"
                android:text="Log in"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/other_sign_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:lineSpacingExtra="1sp"
                android:text="@string/other_signin_"
                android:textAlignment="center"
                android:textAppearance="@style/other_signup_"
                android:textColor="@color/darkgrey"
                android:textSize="15dp"
                android:translationY="0.28sp" />

            <ImageButton
                android:id="@+id/button_google_sign_in"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_with_googlesignup"
                android:src="@drawable/gogle_svg"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/textviewsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/darkgrey"
                android:paddingTop="50dp"
                android:text="If you don't have account? Signup" />


        </LinearLayout>


    </LinearLayout>
